{
  "name": "codenames",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "act:job": "act -W .github/workflows/ci.yml -j",
    "act:deploy": "act -W .github/workflows/ci.yml",
    "act:build": "act -W .github/workflows/ci.yml -j build",
    "act:test": "act -W .github/workflows/ci.yml-j test"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
